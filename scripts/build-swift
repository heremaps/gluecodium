#!/bin/bash
#
# Script to build the "hello" library for an iOS consumer. This is demonstrated
# by the platforms/swift application.

SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
. "${SCRIPT_DIR}/inc.functions"

BUILD_DIR=${PWD}/build-swift
INSTALL_DIR=${PWD}/dist/swift

[ -d ${BUILD_DIR} ] || mkdir -p ${BUILD_DIR}
[ -d ${INSTALL_DIR} ] || mkdir -p ${INSTALL_DIR}

CWD=${PWD}
pushd ${BUILD_DIR}
safe cmake \
    -DCMAKE_INSTALL_PREFIX=${INSTALL_DIR} \
    -DCMAKE_VERBOSE_MAKEFILE=ON \
    -DHELLO_APIGEN_TRANSPILER_GENERATOR=swift \
    -DHELLO_BUILD_CPP_APP=OFF \
    -DHELLO_SWIFT_TESTS=${CWD}/platforms/ios/Tests \
    -G Ninja \
    ..
popd

safe cmake \
    --build ${BUILD_DIR} \
    --target install
