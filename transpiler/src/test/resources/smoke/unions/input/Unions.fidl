package smoke

interface Unions {
    version {
        major 0
        minor 1
    }

    union NavigationError {
        String errorMessage
        Int32 errorNumber
    }

    union InternalUnion {
        UInt8 value
        Boolean flag
    }

    union NestedUnion {
        String text
        InternalUnion valueOrFlag
    }

    struct structWithUnion {
        InternalUnion valueOrFlag
        String text
    }

    struct InternalStruct {
        UInt8 value
        Boolean flag
    }

    union UnionWithStruct {
        InternalStruct valueAndFlag
        String text
    }

    method methodWithUnion {
        in {
            NavigationError input
        }
        out {
            NavigationError output
        }
    }

    method methodWithNestedUnion {
        in {
            NestedUnion input
        }
        out {
            NestedUnion output
        }
    }

    method methodWithStructWithUnion {
        in {
            structWithUnion input
        }
        out {
            structWithUnion output
        }
    }

    method methodWithUnionWithStruct {
        in {
            structWithUnion input
        }
        out {
            structWithUnion output
        }
    }
}
