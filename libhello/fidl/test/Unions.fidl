package test

interface Unions {
    version {
        major 0
        minor 1
    }

    union NavigationError {
        String errorMessage
        Int32 errorNumber
    }

    union InternalUnion {
        UInt8 value
        Boolean flag
    }

    union NestedUnion {
        String text
        InternalUnion valueOrFlag
    }

    struct structWithUnion {
        InternalUnion valueOrFlag
        String text
    }

    struct InternalStruct {
        UInt8 value
        Boolean flag
    }

    union UnionWithStruct {
        InternalStruct valueAndFlag
        String text
    }

    <** @description:
    Example static method which takes a union and returns a union of same type
    but values are converted to uppercase/increased by one.
    **>
    method methodWithUnion {
        in {
            <** @description: Input union **>
            NavigationError input
        }
        out {
            <** @description: Output union **>
            NavigationError output
        }
    }

    <** @description:
    Example static method which takes a union with union and returns the same type
    For each value present inside: text is lowercased, flags are fliped, numbers are increased by 1
    **>
    method methodWithNestedUnion {
        in {
            <** @description: Input union **>
            NestedUnion input
        }
        out {
            <** @description: Output union **>
            NestedUnion output
        }
    }

    <** @description:
    Example static method which takes a struct with union inside and returns the same type
    For each value present inside: text is lowercased, flags are fliped, numbers are increased by 1
    **>
    method methodWithStructWithUnion {
        in {
            <** @description: Input union **>
            structWithUnion input
        }
        out {
            <** @description: Output union **>
            structWithUnion output
        }
    }

    <** @description:
    Example static method which takes a union with struct inside and returns the same type
    For each value present inside: text is lowercased, flags are fliped, numbers are increased by 1
    **>
    method methodWithUnionWithStruct {
        in {
            <** @description: Input union **>
            structWithUnion input
        }
        out {
            <** @description: Output union **>
            structWithUnion output
        }
    }
}
