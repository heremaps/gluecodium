package test

interface ArraysByteBuffer {

    version {
        major 0
        minor 1
    }

    array Blob of UInt8

    struct StructWithByteBuffer {
        ByteBuffer image
    }

    struct StructWithImplicitArray {
        UInt8[] image
    }

    struct StructWithExplicitArray {
        Blob image
    }

    <** @description:
    Static method which takes a byte buffer and returns an array of same type in reversed order.
    **>
    method methodWithByteBuffer {
        in {
            ByteBuffer input
        }
        out {
            ByteBuffer output
        }
    }

    <** @description:
    Static method which takes an array of bytes and returns an array of same type in reversed order.
    **>
    method methodWithImplicitArray {
        in {
            UInt8[] input
        }
        out {
            UInt8[] output
        }
    }

    <** @description:
    Static method which takes an array of bytes and returns an array of same type in reversed order.
    **>
    method methodWithExplicitArray {
        in {
            Blob input
        }
        out {
            Blob output
        }
    }

    <** @description:
    Static method which takes a byte buffer and returns an array of same type in reversed order.
    **>
    method methodWithByteBufferInStruct {
        in {
            StructWithByteBuffer input
        }
        out {
            StructWithByteBuffer output
        }
    }

    <** @description:
    Static method which takes an array of bytes and returns an array of same type in reversed order.
    **>
    method methodWithImplicitArrayInStruct {
        in {
            StructWithImplicitArray input
        }
        out {
            StructWithImplicitArray output
        }
    }

    <** @description:
    Static method which takes an array of bytes and returns an array of same type in reversed order.
    **>
    method methodWithExplicitArrayInStruct {
        in {
            StructWithExplicitArray input
        }
        out {
            StructWithExplicitArray output
        }
    }
}
