<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <Spinner
    android:id="@+id/errors_spinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:entries="@array/errors_methods" />

  <TextView
    android:id="@+id/errors_description"
    style="@style/AppTheme.ShowCaseText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="@style/TextAppearance.AppCompat" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
      android:id="@+id/errors_submit_true"
      style="@style/AppTheme.ShowCaseButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_true"/>
    <Button
      android:id="@+id/errors_submit_false"
      style="@style/AppTheme.ShowCaseButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/text_false"/>
  </LinearLayout>

  <TextView
    android:id="@+id/errors_result"
    style="@style/AppTheme.ShowCaseResult"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/text_result" />

</LinearLayout>
