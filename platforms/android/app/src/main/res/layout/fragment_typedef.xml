<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/typedef_description"
        style="@style/AppTheme.ShowCaseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/typedef_edit"
        style="@style/AppTheme.ShowCaseInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/typedef_parameter_value" />

    <Button
        android:id="@+id/typedef_submit_button"
        style="@style/AppTheme.ShowCaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/typedef_result"
        style="@style/AppTheme.ShowCaseResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/typedef_result_value" />

    <TextView
        android:id="@+id/typedef_method_details"
        style="@style/AppTheme.ShowCaseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
