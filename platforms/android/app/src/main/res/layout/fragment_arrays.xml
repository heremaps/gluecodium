<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/arrays_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/arrays_methods" />

    <TextView
        android:id="@+id/arrays_description"
        style="@style/AppTheme.ShowCaseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/arrays_edit"
        style="@style/AppTheme.ShowCaseInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/array_elements_hint" />

    <Button
        android:id="@+id/arrays_submit_button"
        style="@style/AppTheme.ShowCaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/arrays_result"
        style="@style/AppTheme.ShowCaseResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_result" />

</LinearLayout>
