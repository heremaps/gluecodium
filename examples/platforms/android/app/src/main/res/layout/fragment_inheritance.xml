<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <Spinner
        android:id="@+id/inheritance_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/inheritance_methods" />

    <TextView
        android:id="@+id/inheritance_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/inheritance_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit" />

    <LinearLayout
        android:id="@+id/headers"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header0"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/header1"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-35dp"
            android:layout_marginStart="-35dp"
            android:gravity="start|center_vertical"
            android:rotation="90"
            android:text="@string/inheritance_table_header_shape" />

        <TextView
            android:id="@+id/header2"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-55dp"
            android:layout_marginStart="-55dp"
            android:gravity="start|center_vertical"
            android:rotation="90"
            android:text="@string/inheritance_table_header_circle" />

        <TextView
            android:id="@+id/header3"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-55dp"
            android:layout_marginStart="-55dp"
            android:gravity="start|center_vertical"
            android:rotation="90"
            android:text="@string/inheritance_table_header_rectangle" />

        <TextView
            android:id="@+id/header4"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-55dp"
            android:layout_marginStart="-55dp"
            android:gravity="start|center_vertical"
            android:rotation="90"
            android:text="@string/inheritance_table_header_square" />
    </LinearLayout>

    <ListView
        android:id="@+id/inheritance_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <TextView
        android:id="@+id/inheritance_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="-100dp" />
</LinearLayout>
