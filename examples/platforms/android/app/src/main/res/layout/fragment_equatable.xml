<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/equatable_description" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <TextView
        android:id="@+id/equatable_input_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/equatable_input_label" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/equatable_entry_int"
            android:inputType="number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:nextFocusForward="@+id/equatable_entry_string"
            android:hint="@string/equatable_int_hint"/>

        <EditText
            android:id="@+id/equatable_entry_string"
            android:inputType="text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:nextFocusForward="@+id/equatable_entry_nested_string"
            android:hint="@string/equatable_string_hint"/>

    </LinearLayout>

    <EditText
        android:id="@+id/equatable_entry_nested_string"
        android:inputType="text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/equatable_nested_string_hint"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/equatable_reference_struct_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/equatable_reference_struct_label" />

    <TextView
        android:id="@+id/equatable_reference_struct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/equatable_reference_hashcode_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/equatable_new_struct_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/equatable_new_struct_label" />

    <TextView
        android:id="@+id/equatable_new_struct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/equatable_equals_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/equatable_hashcode_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/process_equatable_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/process_equatable_btn_txt" />
</LinearLayout>
