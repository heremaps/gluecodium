<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/attributes_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/attributes_methods" />

    <TextView
        android:id="@+id/attributes_description"
        style="@style/AppTheme.ShowCaseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/attributes_edit"
        style="@style/AppTheme.ShowCaseInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/parameter_value" />

    <Button
        android:id="@+id/attributes_submit_button"
        style="@style/AppTheme.ShowCaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/attributes_result"
        style="@style/AppTheme.ShowCaseResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_result" />

</LinearLayout>