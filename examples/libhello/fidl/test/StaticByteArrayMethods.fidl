package test

interface StaticByteArrayMethods {
    version {
        major 0
        minor 1
    }

    <** @description:
    Example static test method which takes a byte buffer and returns it
    **>
    method returnInputByteBuffer {
        in {
            <** @description: Input buffer **>
            ByteBuffer inputBuffer
        }
        out {
            <** @description: Output buffer **>
            ByteBuffer outputBuffer
        }
    }

    <** @description:
    Example static test method which takes a byte buffer and returns it in reverse order
    **>
    method returnReverseByteBuffer {
        in {
            <** @description: Input buffer **>
            ByteBuffer inputBuffer
        }
        out {
            <** @description: Output buffer **>
            ByteBuffer outputBuffer
        }
    }

    <** @description:
    Example static test method which takes two byte buffers and returns a concatenated buffer
    **>
    method concatenateByteBuffers {
        in {
            <** @description: Input buffer 1 to concatenate **>
            ByteBuffer input1
            <** @description: Input buffer 2 to cancatenate **>
            ByteBuffer input2
        }
        out {
            <** @description: Output buffer **>
            ByteBuffer outputBuffer
        }
    }
}
