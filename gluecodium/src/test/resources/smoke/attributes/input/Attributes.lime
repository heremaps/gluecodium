    fun veryFun(
        @Cpp(Attribute = "OnParameterInClass")
        @Java(Attribute = "OnParameterInClass")
        param: String
    )
    @Cpp(Attribute = "OnPropertyInClass")
    @Java(Attribute = "OnPropertyInClass")
    property prop: String
    @Cpp(Attribute = "OnConstInClass")
