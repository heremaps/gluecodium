convert_from_jni( JNIEnv* env, const JniReference<jobject>& jvalue,
                  {{>common/InternalNamespace}}optional< std::chrono::system_clock::time_point >* )
{
    return jvalue
        ? {{>common/InternalNamespace}}optional< std::chrono::system_clock::time_point >(
            convert_from_jni( env, jvalue, (std::chrono::system_clock::time_point*)nullptr ) )
        : {{>common/InternalNamespace}}optional< std::chrono::system_clock::time_point >{};
