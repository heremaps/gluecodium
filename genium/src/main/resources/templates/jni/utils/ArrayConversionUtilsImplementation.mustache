jint
unbox_int_value( JNIEnv* env, const jobject& jvalue )
{
    auto javaIntegerClass = {{.}}::jni::find_class(env, "java/lang/Integer" );
    auto intValueMethodId = env->GetMethodID( javaIntegerClass.get(), "intValue", "()I" );
    jint jresult = {{.}}::jni::call_java_method<jint>(env, jvalue, intValueMethodId);
    return jresult;
}

jlong
unbox_long_value( JNIEnv* env, const jobject& jvalue )
{
    auto javaLongClass = {{.}}::jni::find_class(env, "java/lang/Long" );
    auto longValueMethodId = env->GetMethodID( javaLongClass.get(), "longValue", "()J" );
    jlong jresult = {{.}}::jni::call_java_method<jlong>(env, jvalue, longValueMethodId);
    return jresult;
}

