JniReference<jobject> convert_to_jni( JNIEnv* env, ::std::shared_ptr<int32_t> nvalue );
JniReference<jobject> convert_to_jni( JNIEnv* env, ::std::shared_ptr<int64_t> nvalue );

::std::shared_ptr<bool> convert_from_jni(
    JNIEnv* env, const JniReference<jobject>& jvalue, ::std::shared_ptr<bool>* dummy );
