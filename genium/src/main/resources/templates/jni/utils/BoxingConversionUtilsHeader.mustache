    JNIEnv* env, const JniReference<jobject>& jvalue, ::std::shared_ptr<int32_t>* dummy );
::std::shared_ptr<int64_t> convert_from_jni(
    JNIEnv* env, const JniReference<jobject>& jvalue, ::std::shared_ptr<int64_t>* dummy );
::std::shared_ptr<uint8_t> convert_from_jni(
    JNIEnv* env, const JniReference<jobject>& jvalue, ::std::shared_ptr<uint8_t>* dummy );
::std::shared_ptr<uint16_t> convert_from_jni(
    JNIEnv* env, const JniReference<jobject>& jvalue, ::std::shared_ptr<uint16_t>* dummy );
::std::shared_ptr<uint32_t> convert_from_jni(
    JNIEnv* env, const JniReference<jobject>& jvalue, ::std::shared_ptr<uint32_t>* dummy );
