bool
get_field_value( JNIEnv* env,
                 const JniReference<jobject>& object,
                 const char* fieldName,
                 bool* dummy )
{
    auto fieldId = env->GetFieldID( get_object_class(env, object).release(), fieldName, "Z" );

    return env->GetBooleanField( object.get(), fieldId );
}

