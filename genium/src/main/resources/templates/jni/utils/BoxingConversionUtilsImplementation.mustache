std::shared_ptr<bool>
convert_from_jni(
    JNIEnv* env, const JniReference<jobject>& jvalue, std::shared_ptr<bool>* dummy )
{
    if ( !jvalue )
    {
        return {};
    }
    auto unboxedValue = call_java_method<jboolean>( env, jvalue, "booleanValue", "()Z" );
    return std::make_shared<bool>( unboxedValue );
}

