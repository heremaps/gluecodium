jint
unbox_int_value( JNIEnv* env, const {{.}}::jni::JniReference<jobject>& jvalue )
{
    auto javaIntegerClass = {{.}}::jni::find_class( env, "java/lang/Integer" );
    auto intValueMethodId = env->GetMethodID( javaIntegerClass.get(), "intValue", "()I" );
    return {{.}}::jni::call_java_method<jint>( env, jvalue, intValueMethodId );
}

jlong
unbox_long_value( JNIEnv* env, const {{.}}::jni::JniReference<jobject>& jvalue )
