import "classpath:/GeniumExtensions.fdepl"
import "./Visibility.fidl"

define GeniumExtensions for interface smoke.InternalInterface
{
    IsInterface = true
}

define Visibility for interface smoke.InternalInterface
{
    Internal = true
}

define GeniumExtensions for interface smoke.InternalClass
{
    IsInterface = false
}

define Visibility for interface smoke.InternalClass
{
    Internal = true
}

define GeniumExtensions for interface smoke.PublicInterface
{
    IsInterface = true
}

define Visibility for interface smoke.PublicInterface
{
    struct InternalStruct {
        Internal = true
    }
}

define GeniumExtensions for interface smoke.PublicClass
{
    IsInterface = false
}

define Visibility for interface smoke.PublicClass
{
    attribute internalStructAttribute {
        Internal = true
    }

    attribute internalSetterAttribute {
        InternalSetter = true
    }

    method internalMethod {
        Internal = true
    }

    struct InternalStruct {
        Internal = true
    }

    struct PublicStruct {
        internalField {
            Internal = true
        }
    }

    struct PublicStructWithInternalDefaults {
        internalField { Internal = true }
    }

    enumeration InternalEnum {
        Internal = true
    }

    array InternalArray {
        Internal = true
    }
}

define Defaults for interface smoke.PublicClass
{
     struct PublicStructWithInternalDefaults {
         internalField { DefaultValue = "foo" }
     }
}

define Visibility for typeCollection smoke.PublicTypeCollection
{
    struct InternalStruct {
        Internal = true
    }
}
